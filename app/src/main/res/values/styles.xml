<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Claro general (Se aplica en el Manifest) -->
    <style name="Theme.CocinaConCatarinaApp." parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:colorBackground">@color/camel</item>

        <item name="colorPrimary">@color/marronMuyOscuro</item>
        <item name="colorPrimaryVariant">@color/marronOscuro</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/verde</item>
        <item name="colorSecondaryVariant">@color/verdeMusgo</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/verdeClaro</item>
        <item name="colorOnSurface">@color/verdeOscuroContraste</item>
        <item name="colorOnBackground">@color/marronMuyOscuro</item>

        <item name="colorError">@color/white</item>
        <item name="colorOnError">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/marronMuyOscuro</item>

        <item name="cardViewStyle">@style/cardView</item>
    </style>

    <!-- Buttons-->
    <style name="boton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">100dp</item>
        <item name="backgroundTint">@color/rosaPaloClaro</item>
        <item name="android:textColor">@color/marronMuyOscuro</item>
    </style>
    <style name="boton2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/marronMuyOscuro</item>
        <item name="android:textColor">@color/rosaPaloClaro</item>
    </style>

    <!-- CardViews -->
    <style name="cardView" parent="Widget.Material3.CardView.Filled">
        <!-- Fondo de la tarjeta -->
        <item name="cardBackgroundColor">@color/camelClaro</item>
        <item name="android:padding">0dp</item>
        <!-- Bordes redondeados -->
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="cardCornerRadius">12dp</item>
        <!-- ElevaciÃ³n y sombra -->
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardMaxElevation">12dp</item>

        <!-- Borde-->
        <item name="strokeColor">@color/beisClaro</item>
        <item name="strokeWidth">10dp</item>

        <!-- Texto-->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/marronMuyOscuro</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Texto oscuro sobre fondo claro -->
    <style name="textoPrincipalOscuro">
        <item name="android:textColor">@color/marronMuyOscuro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textoSecundarioOscuro" parent="textoPrincipalOscuro">
        <item name="android:textColor">@color/morado</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Texto claro sobre fondo oscuro -->
    <style name="textoPrincipalClaro">
        <item name="android:textColor">@color/beisClaro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textoSecundarioClaro" parent="textoPrincipalClaro">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>